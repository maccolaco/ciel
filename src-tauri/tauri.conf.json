{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Ciel Portfolio Manager",
  "version": "0.1.0",
  "identifier": "com.ciel.portfolio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ciel Portfolio Manager",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APPDATA", "$DOCUMENT", "$DOWNLOAD", "$DESKTOP"],
        "deny": []
      }
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "shell": {
      "open": true
    }
  }
}